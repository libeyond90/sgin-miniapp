/* pages/teacher/home/index.wxss */
page {
  --primary: #6366f1;
  --primary-light: rgba(99, 102, 241, 0.12);
  --primary-dark: #4f46e5;
  --text: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.65);
  --surface: rgba(30, 30, 35, 0.85);
  --surface-light: rgba(255, 255, 255, 0.08);
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.page {
  min-height: 100vh;
  background: transparent;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
  padding-top: env(safe-area-inset-top);
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 40%;
  z-index: 1;
  object-fit: cover;
  opacity: 0.9;
}

/* 顶部区域 */
.top-section {
  position: relative;
  z-index: 2;
  padding: 24rpx 24rpx 16rpx;
  flex-shrink: 0;
}

/* 信息卡片 */
.info-card {
  background: var(--surface);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  margin-bottom: 36rpx;
}

.name {
  font-size: 40rpx;
  color: var(--text);
  font-weight: 600;
  margin-right: 20rpx;
  letter-spacing: 0.5rpx;
}

.position-tag {
  height: 36rpx;
  padding: 0 16rpx;
  background: var(--primary-light);
  border-radius: 18rpx;
  font-size: 22rpx;
  color: var(--primary);
  display: inline-flex;
  align-items: center;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  border: 1px solid rgba(99, 102, 241, 0.2);
  box-shadow: 0 2px 4px rgba(99, 102, 241, 0.1);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  position: relative;
}

.info-item::after {
  content: '';
  position: absolute;
  left: 10%;
  right: 10%;
  bottom: 0;
  height: 1px;
  background: linear-gradient(to right, 
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
}

.info-item:last-child::after {
  display: none;
}

.info-icon {
  background: linear-gradient(to bottom, var(--primary), var(--primary-dark));
  margin-right: 20rpx;
  border-radius: 2rpx;
}

.info-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.info-value {
  font-size: 26rpx;
  color: var(--text);
  padding: 6rpx 20rpx;
  background: var(--surface-light);
  border-radius: 6rpx;
  letter-spacing: 0.5rpx;
  border: 1px solid rgba(255, 255, 255, 0.06);
}

.count-box {
  display: flex;
  gap: 16rpx;
}

.count-item {
  font-size: 26rpx;
  color: var(--text);
  padding: 6rpx 20rpx;
  background: var(--surface-light);
  border-radius: 6rpx;
  letter-spacing: 0.5rpx;
  border: 1px solid rgba(255, 255, 255, 0.06);
}

/* 发布按钮 */
.publish-btn {
  margin: 0 4rpx 24rpx;
  height: 81rpx;
  background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text);
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.publish-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.2);
}

.btn-icon {
  font-size: 34rpx;
  margin-right: 12rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 任务列表 */
.task-list {
  padding: 24rpx 24rpx calc(env(safe-area-inset-bottom) + 130rpx);
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.task-item {
  background: rgba(24, 24, 27, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.task-item:last-child {
  margin-bottom: 0;
}

.task-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.task-name {
  flex: 1;
  margin-right: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.task-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: 16rpx;
}

.task-status {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
}

.task-info {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.distance-tag {
  font-size: 24rpx;
  color: var(--primary);
  background: rgba(99, 102, 241, 0.15);
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.05);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.location-icon {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

.location-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  flex: 1;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.creator-name {
  color: rgba(255, 255, 255, 0.5);
}

.deadline-time {
  color: rgba(255, 255, 255, 0.5);
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 64rpx 32rpx;
  color: #2d3748;
  font-size: 26rpx;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.7;
}


.list-bottom-text {
  text-align: center;
  padding: 10rpx 0;
  color: rgba(34, 32, 32, 0.6);
  font-size: 26rpx;
  letter-spacing: 0.5rpx;
}

/* 班级选择弹窗 */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
  backdrop-filter: blur(4px);
}

.picker-mask.show {
  visibility: visible;
  opacity: 1;
}

.picker-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--surface);
  backdrop-filter: blur(20px);
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-mask.show .picker-content {
  transform: translateY(0);
}

.picker-title {
  text-align: center;
  font-size: 30rpx;
  color: var(--text);
  padding: 28rpx;
  font-weight: 600;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  letter-spacing: 0.5rpx;
}

.picker-list {
  max-height: 60vh;
  padding: 16rpx 24rpx;
}

.picker-item {
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  transition: all 0.2s ease;
}

.picker-item:active {
  background: rgba(255, 255, 255, 0.05);
}

.picker-item:last-child {
  margin-bottom: 0;
}

.picker-item.active {
  color: var(--primary);
  background: var(--primary-light);
  font-weight: 600;
  letter-spacing: 0.5rpx;
}


.qd-class-id {
  height: 45rpx;
  padding: 0 16rpx;
  /* background: var(--primary-light); */
  /* border-radius: 18rpx; */
  font-size: 29rpx;
  color: var(--primary);
  display: inline-flex;
  align-items: center;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  border: 1px solid rgba(99, 102, 241, 0.2);
  /* box-shadow: 0 2px 4px rgba(99, 102, 241, 0.1); */
  position: absolute;
  right: 0;
  top: 0;
}

/* 状态筛选区域 */
.filter-section {
  margin: 0 24rpx;
  background: rgba(24, 24, 27, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 3rpx;
}

.filter-tabs {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.filter-tab {
  padding: 12rpx 32rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  font-weight: 500;
}

/* 状态标签 */
.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.status-ongoing {
  color: #10B981;
  background: rgba(16, 185, 129, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.status-ended {
  color: #9CA3AF;
  background: rgba(156, 163, 175, 0.1);
  border: 1px solid rgba(156, 163, 175, 0.2);
}