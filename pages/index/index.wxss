.container {
    position: relative;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    border-radius: 20px; /* 圆角 */
    padding: 30px; /* 内边距 */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3); /* 增加阴影效果 */
}

.background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1; /* 使背景图在后面 */
    width: 100%; /* 确保背景图宽度覆盖 */
    height: 100%; /* 确保背景图高度覆盖 */
}

.registration-options {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.student-register, .teacher-register {
    width: 80%;
    padding: 15px;
    margin: 15px 0;
    font-size: 22px; /* 增大字体 */
    background-color: #007BFF; /* 蓝色按钮 */
    color: white;
    border: none;
    border-radius: 30px; /* 圆角按钮 */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* 阴影效果 */
    transition: background-color 0.3s, transform 0.3s; /* 动画效果 */
}

.student-register:hover, .teacher-register:hover {
    background-color: #0056b3; /* 悬停时变色 */
    transform: translateY(-3px); /* 悬停时上移 */
}

.check-in {
    width: 80%;
    padding: 15px;
    margin: 15px 0;
    font-size: 22px; /* 增大字体 */
    background-color: #FF5722; /* 签到按钮颜色 */
    color: white;
    border: none;
    border-radius: 30px; /* 圆角按钮 */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* 阴影效果 */
    transition: background-color 0.3s, transform 0.3s; /* 动画效果 */
}

.check-in:hover {
    background-color: #E64A19; /* 悬停时变色 */
    transform: translateY(-3px); /* 悬停时上移 */
}

.title {
    font-size: 28px; /* 标题字体大小 */
    font-weight: bold; /* 加粗 */
    color: #333; /* 标题颜色 */
    margin-bottom: 20px; /* 标题与按钮之间的间距 */
}
